@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisine Categories</h1>
@if (@Model.Count == 0)
{
  <h3>No cuisine categories have been added yet.</h3>
}
@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
}
<p>@Html.ActionLink("Add new category of cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>